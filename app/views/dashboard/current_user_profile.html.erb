<section class='w-full flex items-center h-[50vh] justify-center'>
  <div class="flex flex-col items-center gap-2">
    <% if current_user.avatar_url %>
      <%= image_tag current_user.avatar_url, class: "rounded-full h-auto w-24 border border-gray-200 shadow-lg" %>
    <% else %>
      <div class="rounded-full h-24 w-24 border border-gray-200 shadow-lg bg-gray-200 flex items-center justify-center">
        <span class="text-4xl font-bold"><%= current_user.email[0].upcase %></span>
      </div>
    <% end %>

    <span class="font-bold text-xl"><%= current_user.full_name %></span>

    <%= link_to destroy_user_session_path, data: {turbo_method: :delete, turbo_frame: "_top", action: "advance"  } do %>
      <div class="w-full px-4 py-2 cursor-pointer rounded-xl bg-red-500 text-white font-bold">
        <span>Logout</span>
      </div>
    <% end %>
  </div>
</section>

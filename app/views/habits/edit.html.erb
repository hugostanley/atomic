<main class="px-4">
  <%= link_to "Home", root_path, data: {turbo_frame: "_top"} %>
  <section class="flex flex-col gap-2 py-2">
    <% @habits.each_with_index do |habit, idx| %>
      <div id="<%= dom_id(habit) %>_edit" class="flex items-center gap-2">
        <span><%= idx + 1 %>. <%= habit.name %></span>
        <%= button_to delete_habit_path(habit.id), method: :delete do %>
          <%= render partial: 'shared/icons/trash', locals: {className: ''} %>
        <% end %>
      </div>
    <% end %>
  </section>
</main>

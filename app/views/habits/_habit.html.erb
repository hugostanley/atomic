<div data-id="<%= habit.id %>" id="user_<%= habit.user_id %>_habit_<%= habit.id %>" class="flex w-full items-center gap-2">
  <%= button_to log_habit_path(habit.id), data: {controller: 'authenticity habit-block', habit_block_amount_value: amount, habit_block_frequency_value: habit.frequency}, form_class: 'grow ', class: 'w-full' do %>
    <div class="p-4 w-full border border-slate-300 rounded-lg shadow-sm flex justify-between relative" data-habit-block-target="habitDiv">
      <span class="font-medium z-50 text-left"><%= habit.name %></span>
      <div class="z-50 text-right">
        <span class=""><%= amount %> / <%= habit.frequency %></span>
        <span class="">
          <% if habit.habit_type == 'daily' %>
            <%= 'today' %>
          <% elsif habit.habit_type == 'weekly' %>
            <%= 'this week' %>
          <% else %>
            <%= 'this month' %>
          <% end %>
        </span>
      </div>
    </div>
  <% end %>
</div>
